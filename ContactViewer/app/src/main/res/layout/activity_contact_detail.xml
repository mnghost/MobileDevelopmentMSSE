<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.msse.seth.contactviewer.ContactDetail">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Name:"
            android:id="@+id/nameLabel"
            android:layout_margin="3sp"
            />

        <TextView android:layout_margin="3sp" android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/contact_detail_name" android:text="@string/hello_world" android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Title:"
            android:id="@+id/titleLabel"
            android:layout_margin="3sp"
            />

        <TextView android:layout_margin="3sp" android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/contact_detail_title" android:text="@string/hello_world" android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Phone:"
            android:id="@+id/phoneLabel"
            android:layout_margin="3sp"
            />

        <TextView android:layout_margin="3sp" android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/contact_detail_phone" android:text="@string/hello_world" android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Twitter:"
            android:id="@+id/twitterLabel"
            android:layout_margin="3sp"
            />

        <TextView android:layout_margin="3sp" android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/contact_detail_twitter" android:text="@string/hello_world" android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Email:"
            android:id="@+id/emailLabel"
            android:layout_margin="3sp"
            />

        <TextView android:layout_margin="3sp" android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/contact_detail_email" android:text="@string/hello_world" android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>
