<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.msse.seth.contactviewer.ContactDetail">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true"
        >

        <TextView android:id="@+id/contact_detail_name" android:text="@string/hello_world" android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView android:id="@+id/contact_detail_title" android:text="@string/hello_world" android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView android:id="@+id/contact_detail_phone" android:text="@string/hello_world" android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView android:id="@+id/contact_detail_twitter" android:text="@string/hello_world" android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView android:id="@+id/contact_detail_email" android:text="@string/hello_world" android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>
